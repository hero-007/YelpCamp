<%- include("../partials/header.ejs") %>

<div class="container my-4">
    <div class="jumbotron">
        <p class="display-4">Welcome to YelpCamp</p>
        <p class="lead">YelpCamp is your goto site for finding and registering the best campgrounds near buy.</p>
        <hr class="my-4">
        <a href="campgrounds/new"><button class="btn btn-success btn-lg">Add New Campgrounds</button></a>
    </div>
</div>
<div class="container">
    <% if(noMatch !== undefined) { %>
        <div class="text-center display-4">
            <%= noMatch %>
        </div>
    <% } %>
    <div class="row d-flex justify-content-around">
        <% campgrounds.forEach(function(camp){ %>
        <div class="card col-lg-3 col-md-5 col-sm-11 m-3">
            <img src= "<%= camp.img %>" alt="Check your connection" class="card-img-top">
            <div class="card-content">
                <h5 class="card-title my-2" ><%= camp.name %></h5>
                <p class="card-text"><%= camp.description.substring(0,100) %>...</p>
                <a href="/campgrounds/<%= camp._id %>"><button class="btn btn-primary btn-md btn-warning">Lets Explore!</button></a>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<%- include("../partials/footer.ejs") %>